# WorkflowMax OAuth2 Endpoints
WORKFLOWMAX_AUTH_URL=https://oauth.workflowmax2.com/oauth/authorize
WORKFLOWMAX_TOKEN_URL=https://oauth.workflowmax2.com/oauth/token
WORKFLOWMAX_REDIRECT_URI=http://localhost:8000/callback

# OAuth2 Credentials
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here
WORKFLOWMAX_SCOPE=openid profile email workflowmax offline_access

# Token Storage (Optional)
WORKFLOWMAX_TOKEN_STORAGE=.oauth_cache.json
WORKFLOWMAX_TOKEN_ENCRYPTION_KEY=your_encryption_key_here  # Optional, for token encryption

# LinkedIn Credentials
LINKEDIN_USERNAME=your_linkedin_username_here
LINKEDIN_PASSWORD=your_linkedin_password_here
